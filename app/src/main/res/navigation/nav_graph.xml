<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="es.estech.myapplication.ui.fragments.ListaGatosFragment"
        android:label="Lista de razas"
        tools:layout="@layout/fragment_lista_gatos">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_tusVotosFragment"
            app:destination="@id/tusVotosFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="es.estech.myapplication.ui.fragments.InfoGatoFragment"
        android:label="InformaciÃ³n de raza"
        tools:layout="@layout/fragment_info_gato">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/tusVotosFragment"
        android:name="es.estech.myapplication.ui.fragments.TusVotosFragment"
        android:label="Tus Votos"
        tools:layout="@layout/fragment_tus_votos" />
</navigation>